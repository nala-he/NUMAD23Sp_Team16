<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadeScrollbars="false" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WebServiceActivity">

        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:text="@string/country_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/country_edittext"
            app:layout_constraintEnd_toStartOf="@+id/country_edittext"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/country_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:autofillHints="United States"
            android:ems="10"
            android:hint="@string/united_states"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/country_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/capital_switch_button"
            android:layout_width="153dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="@string/show_capital_city"
            app:layout_constraintEnd_toStartOf="@+id/flag_switch_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_edittext" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/flag_switch_button"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/show_flag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/capital_switch_button"
            app:layout_constraintTop_toBottomOf="@+id/country_edittext" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/currency_switch_button"
            android:layout_width="153dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:text="@string/show_currency"
            app:layout_constraintEnd_toStartOf="@+id/translation_switch_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/capital_switch_button" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/translation_switch_button"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:text="@string/show_list_of_translations"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/currency_switch_button"
            app:layout_constraintTop_toBottomOf="@+id/flag_switch_button"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/call_service_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:onClick="callWebserviceButtonHandler"
            android:text="@string/ping_web_service_button"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currency_switch_button" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="194dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/call_service_button"
            app:layout_constraintBottom_toTopOf="@+id/country_textview"
            app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/country_textview"
            android:layout_width="300dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/country_name"
            android:text="@string/official_name"
            app:layout_constraintBottom_toTopOf="@+id/capital_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />

        <TextView
            android:id="@+id/capital_textview"
            android:layout_width="300dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/capital"
            android:text="@string/capital"
            app:layout_constraintBottom_toTopOf="@+id/currency_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_textview" />

        <TextView
            android:id="@+id/currency_textview"
            android:layout_width="300dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/currency"
            android:text="@string/currency"
            app:layout_constraintBottom_toTopOf="@+id/flag_imageview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/capital_textview" />

        <ImageView
            android:id="@+id/flag_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/flag_sample"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currency_textview"
            app:srcCompat="@drawable/flag" />

        <TextView
            android:id="@+id/temp_translation_textview"
            android:layout_width="303dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:text="@string/translations"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.69"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flag_imageview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nameRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temp_translation_textview"
            app:layout_constraintVertical_bias="0.509" />


        <ImageView
            android:id="@+id/imageView_currency"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/currency"
            app:layout_constraintBottom_toBottomOf="@+id/currency_textview"
            app:layout_constraintEnd_toStartOf="@+id/currency_textview"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/currency" />

        <ImageView
            android:id="@+id/imageView_capital"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/capital"
            app:layout_constraintBottom_toTopOf="@+id/imageView_currency"
            app:layout_constraintEnd_toStartOf="@+id/capital_textview"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_country"
            app:srcCompat="@drawable/capital" />

        <ImageView
            android:id="@+id/imageView_translation"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="14dp"
            android:contentDescription="@string/translations"
            app:layout_constraintBottom_toBottomOf="@+id/temp_translation_textview"
            app:layout_constraintEnd_toStartOf="@+id/temp_translation_textview"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/translation" />

        <ImageView
            android:id="@+id/imageView_country"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@+id/country_textview"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:srcCompat="@drawable/country" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
